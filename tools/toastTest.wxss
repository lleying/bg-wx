.toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: flex-end;
  padding-bottom: 100rpx;  
  position: fixed;  
  z-index: 999;  
}  
.toast_content {  
  padding: 10rpx;  
  background: rgba(0, 0, 0, 0.5);  
  border-radius: 10rpx;  
}  
.toast_content_text {  
  height: 100%;  
  width: 100%;  
  color: #fff;  
  font-size: 28rpx;  
  text-align: center;  
} 