/* pages/personalinfo/addresslist.wxss */
.empty-box {
  width: 100%;
  height: 740rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}
.empty-box image {
  width: 172rpx;
  height: 156rpx;
  margin-bottom: 52rpx;
}
.empty-box view {
  text-align: center;
  color: #d1d1d1;
}
.add-address, .clear-address {
  padding: 0 30rpx;
}
.add-address view, .clear-address view {
  width: 100%;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  border-radius: 10rpx;
}
.address-item {
  padding: 30rpx 36rpx 30rpx 32rpx;
  box-shadow: 0 1px #d1d1d1;
}
.address-item .top {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.address-item .top .phone {
  flex: 1;
  margin-left: 34rpx;
}
.address-item .top image {
  width: 31rpx;
  height: 35rpx;
}
.address-operation {
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  background: white;
  padding-bottom: 60rpx;
}
.clear-address {
  margin-bottom: 30rpx;
}
.clear-address view {
  border: 2rpx solid #d1d1d1;
}