/* pages/shop/list.wxss */
page {
  background-color: #f4f4f4;
}

/*tab start*/
.tabbar {
  width: 100%;
  height: 80rpx;
  background-color: white;
  display: flex;
  justify-content: center;
}
.tabbar .tab-item {
  width: 256rpx;
  height: 100%;
  display: flex;
  justify-content: center;
}
.tab-item .tab-item-inner {
  width: 120rpx;
  height: 100%;
  line-height: 80rpx;
}
.tab-item .tab-item-inner.selected {
  line-height: 79rpx;
  border-bottom: 1px solid #19B377;
  color: #19B377;
}
/*tab end*/

/*tab1 start*/
.tab1 .notice {
  margin-top: 100rpx;
  text-align: center;
}
/*tab1 end*/

/*tab2 start*/
.tab2 {
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx 0;
}
.tab2 .garden-item {
 flex: 0 0 31.3%;
 height: 216rpx;
 background-color: white;
 padding-top: 44rpx;
 margin: 20rpx 20rpx 0 0; 
}
.tab2 .garden-item:nth-child(3n) {
  margin-right: 0;
}
.garden-item .item-imagebox {
  height: 108rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.garden-item .item-imagebox image {
  width: 108rpx;
  height: 108rpx;
}
.garden-item .item-pricebox {
  text-align: center;
  line-height: 30rpx;
}
.garden-item .item-pricebox image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 22rpx;
  vertical-align: middle;
}


/*tab2 end*/
.bottom-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}
.bottom-bar .bottom-box {
  flex: 0 0 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  position: relative;
  background-color: white;
  box-shadow: 6rpx 6rpx 4rpx inset rgba(25, 179, 119, 0.36);
  border-radius: 4rpx;
}
.bottom-bar .gold-box image {
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  top: 12rpx;
  left: 18rpx;
}
.bottom-bar .diamond-box image {
  width: 38rpx;
  height: 35rpx;
  position: absolute;
  top: 14rpx;
  left: 18rpx;
}

/*page-mask start*/
.page-mask {
  display: flex;
  justify-content: center;
  align-items: center;
}
.page-mask .detail-showbox {
  width: 520rpx;
  position: relative;
  padding: 64rpx 42rpx 44rpx 42rpx;
  background-color: white;
  border-radius: 20rpx;
}
.page-mask .detail-showbox .cross {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-weight: 700;
  font-family: consolas;
  position: absolute;
  top: 0;
  right: 0;
}
.page-mask .item-pic-showbox {
  text-align: center;
  padding-bottom: 54rpx;
  border-bottom: 1px solid #d1d1d1;
  margin-bottom: 30rpx;
}
.page-mask .item-pic-showbox image {
  width: 200rpx;
  height: 200rpx;
}
.page-mask .item-cost-showbox {
  margin-bottom: 24rpx;
}
.page-mask .item-cost-showbox image {
  width: 34rpx;
  height: 36rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.page-mask .item-desc-showbox {
  line-height: 48rpx;
}

