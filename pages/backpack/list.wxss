/* pages/backpack/list.wxss */
page {
  background-color: #19B377;
}
.infobox {
  display: flex;
  justify-content: space-between;
  padding: 0 26rpx 0 34rpx;
  margin-bottom: 60rpx;
}
.infobox .avatar-box {
  flex: 0 0 120rpx;
  margin-right: 120rpx;
}
.infobox .username {
  text-align: center;
}
.avatar-box image {
  width: 100%;
  height: 120rpx;
  margin-bottom: 14rpx;
  border-radius: 50%;
}
.infobox .wealth-showbox {
  display: flex;
  align-items: center;
  height: 120rpx;
}
.wealth-showbox .coin-box {
  width: 215rpx;
  height: 56rpx;
  position: relative;
  margin-right: 20rpx;
}
.wealth-showbox .coin-box image {
  width: 100%;
  height: 100%;
}
.wealth-showbox .coin-box view {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  line-height: 56rpx;
  padding-left: 92rpx;
}
.wealth-showbox .diamond-box {
  width: 220rpx;
  height: 60rpx;
  position: relative;
}
.wealth-showbox .diamond-box view {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  line-height: 60rpx;
  padding-left: 92rpx;
}
.wealth-showbox .diamond-box image {
  width: 100%;
  height:100%;
}
/*tabbar start*/
.wrap {
  padding: 0 30rpx;
}
.tabbar {
  height: 68rpx;
  display: flex;
  justify-content: center;
}
.tabbar .tab-item {
  flex: 0 0 240rpx;
  height: 100%;
  background-color: white;
  text-align: center;
  display: flex;
  justify-content: center;
}
.wrap .tabbar .tab-item.selected {
  border: 0;
}
.tabbar .tab-item:first-child {
  border-top-left-radius: 20rpx;
  border-right: 1px solid #d1d1d1;
  border-bottom: 1px solid #d1d1d1;
}
.tabbar .tab-item:nth-child(2) {
  border-top-right-radius: 20rpx;
  border-left: 1px solid #d1d1d1;
  border-bottom: 1px solid #d1d1d1;
}
.tabbar .tab-item .tab-item-inner {
  width: 120rpx;
  height: 100%;
  line-height: 64rpx;
}
.tabbar .tab-item .tab-item-inner.selected {
  color: #19B377;
  border-bottom: 2px solid #19B377;
}
/*tabbar end*/

/*tab-control-item global*/
.tab-control-item {
  background-color: white;
  border-radius: 20rpx;
}

.notice {
  margin-top: 34rpx;
  text-align: center;
}
.quiz-btn-container {
  display: flex;
  justify-content: center;
  margin-top: 68rpx;
}
.quiz-btn {
  flex: 0 0 372rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 4rpx;
}
/*tab1 start*/
.tab1 {
  position: relative;
  height: 760rpx;
}
.tab1 .mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .3);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
}
/*tab1 end*/
/*tab2 start*/
.tab2 {
  padding: 60rpx 30rpx 80rpx;
  height: 760rpx;
}
.tab2 .garden-item {
  display: inline-block;
  width: 33%;
  margin-top: 52rpx;
}
.tab2 .garden-item:nth-child(3n) {
  margin-right: 0;
}
.tab2 .garden-item:nth-child(-n+3) {
  margin-top: 0;
}
.tab2 .garden-item .garden-item-imagebox{
  width: 100%;
  text-align: center;
  margin-bottom: 10rpx;
} 
.tab2 .garden-item image {
  width: 84rpx;
  height: 84rpx;
}
.tab2 .garden-item .garden-item-name {
  text-align: center;
}
/*tab2 end*/

/*page-mask start*/
.page-mask {
  display: flex;
  justify-content: center;
  align-items: center;
}
.page-mask .detail-showbox {
  width: 520rpx;
  position: relative;
  padding: 64rpx 42rpx 44rpx 42rpx;
  background-color: white;
  border-radius: 20rpx;
}
.page-mask .detail-showbox .cross {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-weight: 700;
  font-family: consolas;
  position: absolute;
  top: 0;
  right: 0;
}
.page-mask .item-pic-showbox {
  text-align: center;
  padding-bottom: 54rpx;
  border-bottom: 1px solid #d1d1d1;
  margin-bottom: 30rpx;
}
.page-mask .item-pic-showbox image {
  width: 200rpx;
  height: 200rpx;
}
.page-mask .item-cost-showbox {
  margin-bottom: 24rpx;
}
.page-mask .item-cost-showbox image {
  width: 34rpx;
  height: 36rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.page-mask .item-desc-showbox {
  line-height: 48rpx;
}

