/* pages/editinfo/bindphone.wxss */
.edit-row {
  width: 100%;
  height: 88rpx;
  padding-left: 30rpx;
}
.edit-row .edit-row-inner {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 1px rgba(209, 209, 209, 1);
}
.edit-row .edit-row-inner input {
  height: 100%;
  flex: 1;
  font-size: 34rpx;
  line-height: 88rpx;
}
.edit-row .edit-row-inner view {
  flex: 0 0 240rpx;
  height: 100%;
  line-height: 88rpx;
  text-align: center;
}
.confirm-btn {
  text-align: center;
  padding: 0 30rpx;
  margin-top: 68rpx;
}
.confirm-btn view {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 10rpx;
}